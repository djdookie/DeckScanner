<Window x:Class="DeckScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeckScanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="525">
    <StackPanel>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="http://metastats.net/decks/" VerticalAlignment="Top" Width="497" Margin="0,20,0,0"/>
        <Button x:Name="button" Content="Scan" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" Click="button_Click" Height="35" Margin="0,20,0,0"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="282" Margin="0,20,0,0"/>
        <TextBox Name="tbResult" 
             ScrollViewer.HorizontalScrollBarVisibility="Auto"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             ScrollViewer.CanContentScroll="True" Margin="0,20,0,0" Height="291"/>
    </StackPanel>
</Window>
